#!/bin/bash
# prerm script for cattywampus
# This script runs before the package is removed

set -e

case "$1" in
    remove|upgrade|deconfigure)
        echo "Preparing to remove cattywampus..."
        
        # Note: We intentionally preserve user configuration and log files
        # in ~/.local/share/cattywampus/ as these are personal data that
        # users may want to keep even after uninstalling the package.
        
        # If this were a complete purge, we might remove user data, but
        # for a standard remove operation, we preserve user settings.
        
        echo "User configuration files in ~/.local/share/cattywampus/ will be preserved."
        ;;
        
    failed-upgrade)
        ;;
        
    *)
        echo "prerm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0